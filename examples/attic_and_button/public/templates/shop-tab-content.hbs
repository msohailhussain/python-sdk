        {{#if variation_key}}
            <div class="card-header text-center">
                Variation: {{variation_key}}
            </div>
        {{/if}}
        {{#if products}}
             <div class="row grid-group">
            {{#each products}}
                    <div class="item col-xs-3 col-lg-3" style="margin-bottom:45px;">
                        <div class="thumbnail">
                            <img class="img-fluid group list-group-image" style="width: 100%;height: 240px;" src="{{this.image_url}}" alt="Item 5">
                            <div class="caption">
                                <h5 class="group inner list-group-item-heading">
                                    {{this.name}}
                                </h5>
                                <p class="group inner list-group-item-text">
                                </p><ul class="list-group list-group-flush">
                                    <li class="list-group-item">Color:{{this.color}}</li>
                                    <li class="list-group-item">Category: {{this.category}}</li>
                                </ul>
                                <p></p>
                                <div class="row">
                                    <div class="col-xs-12 col-md-6">
                                        <p class="lead">
                                            ${{this.price}}
                                        </p>
                                    </div>
                                    <div class="col-xs-12 col-md-6">
                                        <a class="btn btn-info" rel="nofollow" data-method="post" href="/demo/buy?id={{user_id}}&amp;product_id={{this.id}}">Buy Now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            {{/each}}
            </div>
        {{/if}}
