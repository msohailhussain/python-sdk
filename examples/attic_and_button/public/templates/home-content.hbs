{{#if variation_key}}
    <div class="card-header text-center">
        Variation: {{variation_key}}
    </div>
{{/if}}
<div class="row grid-group">
    {{#if products}}
        {{#each products}}
            <div class="item col-xs-3 col-lg-3" style="margin-bottom:45px;">
                <div class="thumbnail">
                    <img class="img-fluid group list-group-image" style="width: 100%;height: 240px;" src={{this.image_url}} alt="Item 2">
                    <div class="caption">
                        <h5 class="group inner list-group-item-heading">
                             {{this.name}}
                        </h5>
                        <p class="group inner list-group-item-text"></p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Color: {{this.color}}</li>
                            <li class="list-group-item">Category: {{this.category}}</li>
                        </ul>
                        <p></p>
                        <div class="row">
                            <div class="col-xs-12 col-md-7">
                                <p class="lead">
                                ${{this.price}}
                                </p>
                            </div>
                            <div class="col-xs-12 col-md-5">
                                <button class="btn btn-info" onclick="buyNow({{this.id}});">Buy Now</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    {{/if}}
</div>